# Apache_install_playbook
---
- name: apache
  hosts: ansible_client
  remote_user: root
  become: true

  tasks:
    - name: apache untar
      unarchive:
       src: /data/easypay-asp/algemeen/httpd-2.4.51-easypay.tar.gz
       dest: /data/easypay-asp/algemeen/

    - name: remove tar
      file:
       path: /data/easypay-asp/algemeen/httpd-2.4.51-easypay.tar.gz
       state: absent

    - name: configure apache
      command: "./configure --prefix=/data/easypay-asp/algemeen/apache --enable-ssl --with-ssl=/data/openssl"
      args:
            chdir: "/data/easypay-asp/algemeen/httpd-2.4.51"

    - name: make install
      command: "make install"
      args:
            chdir: "/data/easypay-asp/algemeen/httpd-2.4.51"

    - name: remove install dir
      file:
        path: /data/easypay-asp/algemeen/httpd-2.4.51
        state: absent

    - name: rechten zetten
      file:
       path: /data/easypay-asp/algemeen/apache
       owner: easypay
       group: easypay
       mode: 0777
       state: directory
       recurse: true
