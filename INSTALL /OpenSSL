---
- name: openssl
  hosts: ansible_client
  become: true
  vars_prompt:
    - name: openssl_path
      prompt: openssl_path
      private: no

  tasks:
    - name: untar openssl
      unarchive:
        src: /data/openssl-1.1.1l.tar.gz
        dest: /data/

    - name: remove tar
      file:
        path: /data/openssl-1.1.1l.tar.gz
        state: absent

    - name: Print message
      ansible.builtin.debug:
        msg: "{{ openssl_path }}"

    - name: input
      command: "{{ openssl_path }}"
      args:
            chdir: "/data/openssl-1.1.1l"

    - name: make install
      command: "make install"
      args:
            chdir: "/data/openssl-1.1.1l"

    - name: remove install dir openssl
      file:
        path: /data/openssl-1.1.1l
        state: absent
